generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String
  status      String   // 'completed' | 'in-progress' | 'pending'
  priority    String   // 'low' | 'medium' | 'high'
  dueDate     DateTime
  project     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  progress    Int      @default(0)
  status      String   // 'completed' | 'in-progress' | 'pending'
  dueDate     DateTime
  priority    String   // 'low' | 'medium' | 'high'
  team        String    // JSON string of avatar URLs or user IDs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Goal {
  id           String   @id @default(cuid())
  title        String
  description  String
  targetValue  Int
  currentValue Int      @default(0)
  unit         String
  targetDate   DateTime
  status       String   // 'completed' | 'in-progress' | 'pending'
  category     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Challenge {
  id            String   @id @default(cuid())
  title         String
  description   String
  type          String   // 'bucket-list' | 'monthly' | 'yearly' | 'habit'
  status        String   // 'not-started' | 'in-progress' | 'completed' | 'failed'
  progress      Int      @default(0)
  targetDate    DateTime?
  completedDate DateTime?
  difficulty    String   // 'easy' | 'medium' | 'hard'
  category      String
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}


